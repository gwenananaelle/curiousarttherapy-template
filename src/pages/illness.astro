---
import MainLayout from '../layouts/MainLayout.astro';
import { Content as IllnessPage } from '../content/illness.md';

import { Image } from 'astro:assets';
import soulcomic from '../assets/illness/soulcomic.png';
import handpainting from '../assets/illness/handpainting.png';
import nietzscheQuote from '../assets/illness/nietzscheQuote.png';
import seifterQuote from '../assets/illness/seifterQuote.png';
import mayaart1 from '../assets/illness/mayaart1.png';
import mayaart2 from '../assets/illness/mayaart2.png';
import myssQuote from '../assets/illness/myssQuote.png';
import scottQuote from '../assets/illness/scottQuote.png';
import mayaart3 from '../assets/illness/mayaart3.png';
import mayaart4 from '../assets/illness/mayaart4.png';
---

<MainLayout>
	<section class="pt-32 pb-20">
		<div class="container-custom">
			<div class="max-w-2xl mx-auto text-center mb-16">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">Illness</h1>
				<div class="prose text-gray-700 mb-6">
					<IllnessPage />
				</div>
				<div>
					<Image
						src={soulcomic}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
					<Image
						src={handpainting}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
					<Image
						src={nietzscheQuote}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
					<Image
						src={seifterQuote}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
					<Image
						src={mayaart1}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
					<Image
						src={mayaart2}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
					<Image
						src={myssQuote}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
					<Image
						src={scottQuote}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
					<Image
						src={mayaart3}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div>
					<Image
						src={mayaart4}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
			</div>
		</div>
	</section></MainLayout
>
