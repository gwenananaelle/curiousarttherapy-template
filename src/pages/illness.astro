---
import MainLayout from '../layouts/MainLayout.astro';
import { Content as IllnessPage } from '../content/illness.md';
import TwoColumnsImgs from '../components/TwoColumnsImgs.astro';
const base = import.meta.env.BASE_URL;
---

<MainLayout>
	<section class="pt-32 pb-20">
		<div class="container-custom">
			<div class="max-w-2xl mx-auto text-center mb-16">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">Illness</h1>
				<div class="prose text-gray-700 mb-6">
					<IllnessPage />
				</div>
				<div>
					<img
						src=`${base}/images/illness/soulcomic.png`
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
						width="720"
						height="720"
					/>
				</div>
				<TwoColumnsImgs
					page="illness"
					image1="handpainting.png"
					alt1=""
					image2="nietzscheQuote.png"
					alt2=""
				/>
				<TwoColumnsImgs
					page="illness"
					image1="seifterQuote.png"
					alt1=""
					image2="mayaart1.png"
					alt2=""
				/>
				<TwoColumnsImgs
					page="illness"
					image1="mayaart2.png"
					alt1=""
					image2="myssQuote.png"
					alt2=""
				/>
				<TwoColumnsImgs
					page="illness"
					image1="scottQuote.png"
					alt1=""
					image2="mayaart3.png"
					alt2=""
				/>
				<div>
					<img
						src=`${base}/images/illness/mayaart4.png`
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
						width="720"
						height="720"
					/>
				</div>
			</div>
		</div>
	</section></MainLayout
>
