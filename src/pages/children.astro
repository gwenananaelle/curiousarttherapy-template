---
import MainLayout from '../layouts/MainLayout.astro';
import { Content as ChildrenPage } from '../content/children.md';

import { Image } from 'astro:assets';
import mayaart1 from '../assets/children/mayaart1.png';
import bunnyandhedgehog from '../assets/children/bunnyandhedgehog.png';
import mayaart2 from '../assets/children/mayaart2.png';
import arcoiris from '../assets/children/arcoiris.png';
import mayaart3 from '../assets/children/mayaart3.png';
import squirreloncatpainting from '../assets/children/squirreloncatpainting.png';
import artisfeeling from '../assets/children/artisfeeling.png';
import picassoQuote from '../assets/children/picassoQuote.png';
---

<MainLayout>
	<section class="pt-32 pb-20">
		<div class="container-custom">
			<div class="max-w-2xl mx-auto text-center mb-16">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">Children</h1>
				<div>
					<Image
						src={mayaart1}
						alt="a painting of a young girl with a yellow t-shit and a blue short in front of a path surrounding by blue color and floating objects and animals"
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div class="prose text-gray-700 mb-6">
					<ChildrenPage />
				</div>
				<div class="grid grid-cols-1 lg:grid-cols-3 gap-16 items-center">
					<div>
						<Image
							src={bunnyandhedgehog}
							alt="a drawing of a bunny digging a burrow to reach a hedgehog with the text there is always a way to reach out and love"
							class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
						/>
					</div>
					<div>
						<Image
							src={mayaart2}
							alt="an abstract painting with shapes of red, blue, yellow and black colors"
							class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
						/>
					</div>
					<div>
						<Image
							src={arcoiris}
							alt="a comic in two panels with two chameleons, one is painting and saying i will paint something and you will guess what it is. On the second panel the other chameleon answers it is a rainbow and the first one asks how did you know. The chameleon whose painting is the color of the rainbow"
							class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
						/>
					</div>
				</div>
				<div class="prose text-gray-700 mb-6">
					<p>
						“i will paint something and you will guess what it is.” “It is a rainbow” “how did you
						know?”
					</p>
				</div>
				<div>
					<Image
						src={mayaart3}
						alt="a painting of a young girl sitting on the beach"
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div class="grid grid-cols-1 lg:grid-cols-3 gap-16 items-center">
					<div>
						<Image
							src={squirreloncatpainting}
							alt="a picture of a paiting of a cat with a squirrel on top of the frame"
							class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
						/>
					</div>
					<div>
						<Image
							src={artisfeeling}
							alt=""
							class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
						/>
					</div>
					<div>
						<Image
							src={picassoQuote}
							alt="a quote by picasso that says every child is an artist"
							class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
						/>
					</div>
				</div>
				<div class="prose text-gray-700 mb-6">
					<p>
						learn more about art therapy for children <a
							rel="noreferrer noopener"
							href="https://www.georgetownbehavioral.com/blog/expressive-art-therapy-for-children?fbclid=IwAR3vQucMHkCCp-Tm2CYvu8vPBzFTg4MyBv96WM-TLPx2GtOd0FR32Diosjs"
							target="_blank">here</a
						> and <a
							rel="noreferrer noopener"
							href="https://www.psychologytoday.com/us/blog/arts-and-health/201601/child-art-therapy-how-it-works?fbclid=IwAR3hW2zH5cPfJ57DSLLPLvMHVE3xYD46wqDh_g_FxDsKDHoY5MEgqSjE03I"
							target="_blank">here</a
						>
					</p>
				</div>
			</div>
		</div>
	</section></MainLayout
>
