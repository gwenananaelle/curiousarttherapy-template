---
import MainLayout from '../layouts/MainLayout.astro';
import { Content as ChildrenPage } from '../content/children.md';

import { Image } from 'astro:assets';
import mayaart1 from '../assets/children/mayaart1.png';
import mayaart3 from '../assets/children/mayaart3.png';
import picassoQuote from '../assets/children/picassoQuote.png';
import cousins from '../assets/children/cousins.jpg';
---

<MainLayout>
	<section class="pt-32 pb-20">
		<div class="container-custom">
			<div class="max-w-2xl mx-auto text-center mb-16">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">Children</h1>
				<div>
					<Image
						src={mayaart1}
						alt="a painting of a young girl with a yellow t-shit and a blue short in front of a path surrounding by blue color and floating objects and animals"
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div class="prose text-gray-700 mb-6 text-left">
					<ChildrenPage />
				</div>
				<div>
					<Image
						src={cousins}
						alt="a quote  picasso that says every child is an artist"
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div>
					<Image
						src={mayaart3}
						alt="a painting of a young girl sitting on the beach"
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div class="grid grid-cols-1 lg:grid-cols-1 gap-16 items-center">
					<div>
						<Image
							src={picassoQuote}
							alt="a quote by picasso that says every child is an artist"
							class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
						/>
					</div>
				</div>
				<div class="prose text-gray-700 mb-6 text-left">
					<p>
						Learn more about art therapy for children <a
							rel="noreferrer noopener"
							href="https://www.georgetownbehavioral.com/blog/expressive-art-therapy-for-children?fbclid=IwAR3vQucMHkCCp-Tm2CYvu8vPBzFTg4MyBv96WM-TLPx2GtOd0FR32Diosjs"
							target="_blank">here</a
						> and <a
							rel="noreferrer noopener"
							href="https://www.psychologytoday.com/us/blog/arts-and-health/201601/child-art-therapy-how-it-works?fbclid=IwAR3hW2zH5cPfJ57DSLLPLvMHVE3xYD46wqDh_g_FxDsKDHoY5MEgqSjE03I"
							target="_blank">here</a
						>
					</p>
				</div>
			</div>
		</div>
	</section></MainLayout
>
