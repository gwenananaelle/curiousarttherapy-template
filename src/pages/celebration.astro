---
import MainLayout from '../layouts/MainLayout.astro';
import { Content as CelebrationPage } from '../content/celebration.md';

import { Image } from 'astro:assets';
import saganQuote from '../assets/celebration/saganQuote.png';
import fiestadelosmuertos from '../assets/celebration/fiestadelosmuertos.jpg';
import mayaart2 from '../assets/celebration/mayaart2.png';
import death from '../assets/illness/death.jpg';
---

<MainLayout>
	<section class="pt-32 pb-20">
		<div class="container-custom">
			<div class="max-w-2xl mx-auto text-center mb-16">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">Creative Rituals & Celebrations</h1>
				<Image
					src={fiestadelosmuertos}
					alt=""
					class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
				/>
				<div class="prose text-gray-700 mb-6 text-left indent-8">
					<CelebrationPage />
				</div>
				<div>
					<Image
						src={saganQuote}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
					<Image
						src={mayaart2}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
					<Image
						src={death}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
			</div>
		</div>
	</section></MainLayout
>
