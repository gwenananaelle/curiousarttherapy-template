---
import MainLayout from '../layouts/MainLayout.astro';
import { Content as CelebrationPage } from '../content/celebration.md';

import { Image } from 'astro:assets';
import saganQuote from '../assets/celebration/saganQuote.png';
import fiestadelosmuertos from '../assets/celebration/fiestadelosmuertos.jpg';
import hokusai from '../assets/celebration/hokusai.jpg';
import oshoQuote from '../assets/celebration/oshoQuote.png';
import perretQuote from '../assets/celebration/perretQuote.png';
import mckennittQuote from '../assets/celebration/mckennittQuote.png';
import mayaart1 from '../assets/celebration/mayaart1.png';
import mayaart2 from '../assets/celebration/mayaart2.png';
import mayaart3 from '../assets/celebration/mayaart3.png';
import mayaart4 from '../assets/celebration/mayaart4.png';
import giftofpain from '../assets/celebration/giftofpain.png';
---

<MainLayout>
	<section class="pt-32 pb-20">
		<div class="container-custom">
			<div class="max-w-2xl mx-auto text-center mb-16">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">Celebration</h1>
				<div class="prose text-gray-700 mb-6">
					<p>
						Another important aspect of life is celebration: birth, puberty, coming of age,
						graduations, engagement, weddings.. but also divorce, transitions, losses and death.
					</p>
				</div>
				<div>
					<Image
						src={saganQuote}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div class="prose text-gray-700 mb-6">
					<CelebrationPage />
				</div>
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
					<Image
						src={fiestadelosmuertos}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
					<Image
						src={hokusai}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
					<Image
						src={oshoQuote}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
					<Image
						src={perretQuote}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>

				<div>
					<Image
						src={mckennittQuote}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div class="grid grid-cols-1 lg:grid-cols-3 gap-16 items-center">
					<Image
						src={mayaart1}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
					<Image
						src={mayaart2}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
					<Image
						src={mayaart3}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div>
					<Image
						src={mayaart4}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
				<div>
					<Image
						src={giftofpain}
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
					/>
				</div>
			</div>
		</div>
	</section></MainLayout
>
