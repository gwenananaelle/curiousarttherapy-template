---
import MainLayout from '../layouts/MainLayout.astro';
import { Content as CelebrationPage } from '../content/celebration.md';
import TwoColumnsImgs from '../components/TwoColumnsImgs.astro';
import ThreeColumnsImgs from '../components/ThreeColumnsImgs.astro';
const base = import.meta.env.BASE_URL;
---

<MainLayout>
	<section class="pt-32 pb-20">
		<div class="container-custom">
			<div class="max-w-2xl mx-auto text-center mb-16">
				<h1 class="text-4xl md:text-5xl font-bold mb-4">Celebration</h1>
				<div class="prose text-gray-700 mb-6">
					<p>
						Another important aspect of life is celebration: birth, puberty, coming of age,
						graduations, engagement, weddings.. but also divorce, transitions, losses and death.
					</p>
				</div>
				<div>
					<img
						src=`${base}/images/celebration/saganQuote.png`
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
						width="720"
						height="720"
					/>
				</div>
				<div class="prose text-gray-700 mb-6">
					<CelebrationPage />
				</div>
				<TwoColumnsImgs
					page="celebration"
					image1="fiestadelosmuertos.jpg"
					alt1=""
					image2="hokusai.jpg"
					alt2=""
				/>
				<TwoColumnsImgs
					page="celebration"
					image1="oshoQuote.png"
					alt1=""
					image2="perretQuote.png"
					alt2=""
				/>
				<div>
					<img
						src=`${base}/images/celebration/mckennittQuote.png`
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
						width="720"
						height="720"
					/>
				</div>
				<ThreeColumnsImgs
					page="celebration"
					image1="mayaart1.png"
					alt1=""
					image2="mayaart2.png"
					alt2=""
					image3="mayaart3.png"
					alt3=""
				/>
				<div>
					<img
						src=`${base}/images/celebration/mayaart4.png`
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
						width="720"
						height="720"
					/>
				</div>
				<div>
					<img
						src=`${base}/images/celebration/giftofpain.png`
						alt=""
						class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
						width="720"
						height="720"
					/>
				</div>
			</div>
		</div>
	</section></MainLayout
>
