---
const { page, image1, alt1, image2, alt2 } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
    <div>
        <img
            src=`${base}/images/${page}/${image1}`
            alt=`${alt1}`
            class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
            width="720"
            height="720"
        />
    </div>
    <div>
        <img
            src=`${base}/images/${page}/${image2}`
            alt=`${alt2}`
            class="w-full h-auto rounded-lg shadow-lg border-8 my-4 border-white md:p-4"
            width="720"
            height="720"
        />
    </div>
</div>